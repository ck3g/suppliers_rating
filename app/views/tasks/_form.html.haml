= simple_form_for task, html: { class: "form-horizontal" } do |f|
  = hidden_field_tag :callback_url, params[:callback_url]
  = hidden_field_tag :supplier_service_id, task.supplier_service.id
  = f.input :title, input_html: { class: "input-xxlarge" }
  = f.input :description, input_html: { class: "input-xxlarge", rows: 5 }
  = f.input :cost
  = f.input :in_behalf_of, input_html: { class: "input-xxlarge" }
  .form-actions
    = f.button :submit, class: "btn btn-primary", :"data-disable-with" => t(:wait)
