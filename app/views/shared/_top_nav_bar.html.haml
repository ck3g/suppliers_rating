.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to t(:project_name), root_path, class: "brand"
      .nav-collapse.collapse
        %ul.nav
          %li.active
            %a{:href => "#"} Home
          %li
            %a{:href => "#about"} About
          %li
            %a{:href => "#contact"} Contact
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              Dropdown
              %b.caret
            %ul.dropdown-menu
              %li
                %a{:href => "#"} Action
              %li
                %a{:href => "#"} Another action
              %li
                %a{:href => "#"} Something else here
              %li.divider
              %li.nav-header Nav header
              %li
                %a{:href => "#"} Separated link
              %li
                %a{:href => "#"} One more separated link
        - if user_signed_in?
          %ul.nav.pull-right
            %li
              = link_to "#" do
                = "signed_as"
                = current_user.email
            %li= link_to "Sign out", destroy_user_session_path, method: :delete
        - else
          = simple_form_for(User.new, url: user_session_path, method: :post, html: { class: "navbar-form pull-right"}) do |form|
            = form.email_field :email, class: "span2", placeholder: "Email"
            = form.password_field :password, class: "span2", placeholder: "password"
            = form.submit "Sign in", class: "btn"


